# This recipe performs the standardization and corrections needed to
# convert the raw input science images into a single stacked science
# image.

prepare
addDQ
addVAR(read_noise=True)
overscanCorrect
biasCorrect
aduToElectrons
addVAR(poisson_noise=True)
flatCorrect
writeOutputs(suffix="_forFringe",strip=True)
addToList(purpose="fringe")
makeFringe
fringeCorrect
mosaicDetectors
detectSources
writeOutputs(suffix="_forStack",strip=True)
addToList(purpose="stack")
display
measureIQ
registerAndStack
detectSources
writeOutputs(suffix="_stacked",strip=True)
